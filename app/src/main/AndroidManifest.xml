<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iteso.pdm18_scrollabletabs">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.iteso.pdm18_scrollabletabs.READ_DATABASE"
        android:label="Read Database"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivityMain"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ActivitySplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityItem" />
        <activity android:name=".ActivityLogin" />
        <activity android:name=".ActivityPrivacyPolicy" />

        <provider
            android:name=".tools.DataProvider"
            android:authorities="com.iteso.pdm18_scrollabletabs"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.iteso.pdm18_scrollabletabs.READ_DATABASE"></provider>

        <activity android:name=".ActivityItem"></activity>
    </application>

</manifest>